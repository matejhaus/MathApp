{% extends 'base.html.twig' %}

{% block header %}
    {% include 'Components/AdminNavBar.html.twig' %}
{% endblock %}

{% block title %}Admin{% endblock %}

{% block body %}
    {% if entity %}
        <div class="entity">
            <div class="actions-bar">
                <a href="{{ path('add_' ~ entity) }}" class="btn add-new openDialog">Přidat nový</a>
            </div>
            <table>
                <thead>
                <tr>
                    <th>ID</th>
                    {% if entity == 'examples' %}
                        <th>Theme ID</th>
                        <th>Question</th>
                        <th>Result</th>
                        <th>Actions</th>
                    {% elseif entity == 'users' %}
                        <th>Email</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Actions</th>
                    {% elseif entity == 'themes' %}
                        <th>Name</th>
                        <th>Description</th>
                        <th>Created</th>
                        <th>Updated</th>
                        <th>Actions</th>
                    {% elseif entity == 'quotes' %}
                        <th>position</th>
                        <th>quote</th>
                    {% endif %}
                </tr>
                </thead>
                <tbody>
                {% for data in data %}
                    <tr>
                        {% if entity == 'examples' %}
                            <td>{{ data.id }}</td>
                            <td>{{ data.theme.id }}</td>
                            <td>{{ data.question }}</td>
                            <td>{{ data.result }}</td>
                        {% elseif entity == 'users' %}
                            <td>{{ data.id }}</td>
                            <td>{{ data.email }}</td>
                            <td>{{ data.firstName }}</td>
                            <td>{{ data.lastName }}</td>
                        {% elseif entity == 'themes' %}
                            <td>{{ data.id }}</td>
                            <td>{{ data.name }}</td>
                            <td>{{ data.description }}</td>
                            <td>{{ data.createdAt|date }}</td>
                            <td>{{ data.updatedAt|date }}</td>
                        {% elseif entity == 'quotes' %}
                            <td>{{ data.id }}</td>
                            <td>{{ data.position }}</td>
                            <td>{{ data.quote }}</td>
                        {% endif %}
                        <td class="actions">
                            <a href="{{ path('edit_' ~ entity, {'id': data.id}) }}" class="openDialog" target="_blank">Edit</a>
                            <a href="{{ path('delete_' ~ entity, {'id': data.id}) }}" class="openDialog" target="_blank">Delete</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}

{% endblock %}
