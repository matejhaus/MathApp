{% extends 'base.html.twig' %}

{% block header %}
    {% include 'Components/AdminNavBar.html.twig' %}
{% endblock %}

{% block title %}Admin{% endblock %}

{% block body %}
    {% if entity %}
        <div class="entity">
            <div class="actions-bar">
                <a href="{{ path('add_' ~ entity) }}" class="btn add-new openDialog">Přidat nový</a>
            </div>
            <table>
                <thead>
                <tr>
                    <th>
                        <a href="{{ path('app_admin_entity', {'entity': entity, 'sortBy': 'id', 'sortOrder': sortOrder == 'ASC' ? 'DESC' : 'ASC'}) }}">
                            ID
                            {% if sortBy == 'id' %}
                                {% if sortOrder == 'ASC' %} ↑ {% else %} ↓ {% endif %}
                            {% endif %}
                        </a>
                    </th>
                    {% if entity == 'examples' %}
                        <th>
                            <a href="{{ path('app_admin_entity', {'entity': entity, 'sortBy': 'theme', 'sortOrder': sortOrder == 'ASC' ? 'DESC' : 'ASC'}) }}">
                                Theme ID
                                {% if sortBy == 'theme' %}
                                    {% if sortOrder == 'ASC' %} ↑ {% else %} ↓ {% endif %}
                                {% endif %}
                            </a>
                        </th>
                        <th>Question</th>
                        <th>Result</th>
                    {% elseif entity == 'users' %}
                        <th>Email</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                    {% elseif entity == 'themes' %}
                        <th>Name</th>
                        <th>Description</th>
                        <th>Created</th>
                        <th>Updated</th>
                    {% elseif entity == 'quotes' %}
                        <th>
                            <a href="{{ path('app_admin_entity', {'entity': entity, 'sortBy': 'position', 'sortOrder': sortOrder == 'ASC' ? 'DESC' : 'ASC'}) }}">
                                Position
                                {% if sortBy == 'position' %}
                                    {% if sortOrder == 'ASC' %} ↑ {% else %} ↓ {% endif %}
                                {% endif %}
                            </a>
                        </th>
                        <th>Quote</th>
                    {% endif %}
                </tr>
                </thead>
                <tbody>
                {% for data in data %}
                    <tr>
                        {% if entity == 'examples' %}
                            <td>{{ data.id }}</td>
                            <td>{{ data.theme.id }}</td>
                            <td>{{ data.question }}</td>
                            <td>{{ data.result }}</td>
                        {% elseif entity == 'users' %}
                            <td>{{ data.id }}</td>
                            <td>{{ data.email }}</td>
                            <td>{{ data.firstName }}</td>
                            <td>{{ data.lastName }}</td>
                        {% elseif entity == 'themes' %}
                            <td>{{ data.id }}</td>
                            <td>{{ data.name }}</td>
                            <td>{{ data.description }}</td>
                            <td>{{ data.createdAt|date }}</td>
                            <td>{{ data.updatedAt|date }}</td>
                        {% elseif entity == 'quotes' %}
                            <td>{{ data.id }}</td>
                            <td>{{ data.position }}</td>
                            <td>{{ data.quote }}</td>
                        {% endif %}
                        <td class="actions">
                            <a href="{{ path('edit_' ~ entity, {'id': data.id}) }}" class="openDialog" target="_blank">Edit</a>
                            <a href="{{ path('delete_' ~ entity, {'id': data.id}) }}" class="openDialog" target="_blank">Delete</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}

{% endblock %}
