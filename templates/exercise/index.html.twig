{% extends 'base.html.twig' %}

{% block title %}{{ theme.name }}{% endblock %}
{% block banner %}
    <div class="theme_header">
        <h1>{{ theme.name }}</h1>
        <p>{{ theme.description }}</p>
    </div>
{% endblock %}
{% block body %}
    <div class="form-wrapper">
        {{ form_start(form, {'action': path('app_exercise_test', {theme: theme.name})}) }}
        {{ form_widget(form) }}
        {{ form_end(form) }}
    </div>
{% endblock %}
