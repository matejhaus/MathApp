{
    "listeners": {
        "*:80": {
            "pass": "routes"
        }
    },
    "routes": [
        {
            "match": {
                "uri": [
                    "*.php",
                    "*.php/*"
                ]
            },
            "action": {
                "pass": "applications/symfony/direct"
            }
        },
        {
            "action": {
                "share": "/opt/app/public$uri",
                "response_headers": {
                    "Cache-Control": "public, max-age=1209600"
                },
                "fallback": {
                    "pass": "applications/symfony/index"
                }
            }
        }
    ],
    "applications": {
        "symfony": {
            "type": "php",
            "targets": {
                "direct": {
                    "root": "/opt/app/public/"
                },
                "index": {
                    "root": "/opt/app/public/",
                    "script": "index.php"
                }
            }
        }
    }
}
